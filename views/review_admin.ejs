<!DOCTYPE html>
<html>
<head>
  <title>Reviews Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark px-3">
    <span class="navbar-brand">Admin Dashboard</span>
    <a href="/admin/logout" class="btn btn-outline-light btn-sm">Logout</a>
  </nav>

  <div class="container mt-4">
  <h2 class="mb-3">Client Reviews (<%= reviews.length %>)</h2>

  <% reviews.forEach(function (r) { %>
    <div id="review-<%= r._id %>" class="card mb-3 p-3 shadow-sm">
      <h5><%= r.name %> (<%= r.rating %>â˜…)</h5>
      <p><%= r.review %></p>
      <small><%= r.email %> | <%= new Date(r.date).toLocaleString() %></small>

      <div class="mt-3">
        <!-- Delete button -->
        <form action="/admin/delete/<%= r._id %>" method="POST" class="d-inline"
              onsubmit="return confirm('Delete this review?');">
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
        <!-- Download-as-image button -->
        <button onclick="downloadReviewAsImage('<%= r._id %>')" class="btn btn-success btn-sm">
          Download as Image
        </button>
      </div>
    </div>
  <% }) %>
</div>

  <!-- html2canvas CDN -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

<script>
  function downloadReviewAsImage(reviewId) {
    const reviewCard = document.getElementById(`review-${reviewId}`);

    html2canvas(reviewCard).then(canvas => {
      const link = document.createElement('a');
      link.download = `review-${reviewId}.png`;
      link.href = canvas.toDataURL('image/png');
      link.click();
    });
  }
</script>

</body>
</html>
