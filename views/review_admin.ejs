<!DOCTYPE html>
<html>
<head>
  <title>Reviews Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark px-3">
    <span class="navbar-brand">Admin Dashboard</span>
    <a href="/admin/logout" class="btn btn-outline-light btn-sm">Logout</a>
  </nav>

  <div class="container mt-4">
    <h2 class="mb-3">Client Reviews (<%= reviews.length %>)</h2>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Review</th>
          <th>Rating</th>
          <th>Date</th>
          <th>Delete Reviews</th>
        </tr>
      </thead>
      <tbody>
      <% reviews.forEach(r => { %>
        <tr>
          <td><%= r.name %></td>
          <td><%= r.email %></td>
          <td><%= r.review %></td>
          <td><%= r.rating %></td>
          <td><%= r.date.toLocaleString() %></td>
          <td><form action="/admin/delete/<%= r._id %>" method="POST" onsubmit="return confirm('Delete this review?');">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
